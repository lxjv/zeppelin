---
layout: base
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /blog/t/{{ tag }}/
eleventyComputed:
  title: "Posts tagged {{ tag }}"
---
<h2>Posts tagged <code>{{ tag }}</code></h2>
<blockquote>{{descriptions.post}}</blockquote>
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <p><a href="{{ post.url }}">{{ post.data.title }}</a> - {{post.date | datePretty}}</p>
{% endfor %}
