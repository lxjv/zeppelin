---
layout: base
---

<style>
img {
		max-width: 50%;
		height: auto;
		margin-left: 3em;
	}
</style>

<article class="h-entry">

	<div class="post-meta">

	<h2>
		<span class="p-name">{{title | safe}}</span>
		<small>
			{% for tag in tags %}
			<span class="post-tag p-category"><a class="ntd" href="/blog/t/{{tag}}">#{{tag}}</a></span>
			{% endfor %}
		</small>
	</h2>
	<span>
		<span>{{content | wordcount}} words</span>
		<a class="u-url" href="https://{{metadata.domain}}{{page.url}}">
			<time class="dt-published" datetime="{{page.date | dateISO}}">{{page.date | datePretty}}</time>
		</a>
	</span>
	<p>
		<blockquote class="p-summary" style="margin-bottom: 1em;">
			{{subtitle | safe}}
		</blockquote>
	</p>
	</div>

	<div class="e-content">
		{{content | safe}}
	</div>

	<hr>
	<figure>
  		<blockquote data-key="content"></blockquote>
  		<figcaption>
    <cite>
      <a data-key="url">
        <span data-key="username">@la</span>
        @
        <span data-key="hostname">social.lol</span>
      </a>
    </cite>
    <dl>
      <dt>Reposts</dt>
      <dd data-key="reblogs_count"></dd>
      <dt>Replies</dt>
      <dd data-key="replies_count"></dd>
      <dt>Favourites</dt>
      <dd data-key="favourites_count"></dd>
    </dl>
  </figcaption>
</figure>
	<!--<div>
		<button class="tinylytics_kudos"></button>
	</div>-->

</article>
