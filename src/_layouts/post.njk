---
layout: base
---

<style>
img {
		max-width: 33%;
		margin-left: 3em;
	}
</style>

<article class="h-entry">
	<div class="post-meta">

	<link class="u-url nd" href="https://{{metadata.domain}}{{page.url}}">
	
	<h2 class="p-name">{{title | safe}}</h2>
	<p>
		<time class="dt-published" datetime="{{page.date | dateISO}}">{{page.date | datePretty}},</time>
		<span class="h-card">
		by <img src="{{author.photo}}" class="nb nm" style="vertical-align: middle;" alt="Laker's hat." height="16" width="16">
		<a href="https://laker.tech" class="p-author ntd">{{author.name}}</a>
		</span>
	</p>
	{% for tag in tags %}
		<span class="post-tag"><a href="/blog/t/{{tag}}">#{{tag}}</a></span>
	{% endfor %}
	<blockquote class="p-summary">{{subtitle | safe}}</blockquote>

	<hr>
	</div>

	<div class="e-content">
		{{content | safe}}
	</div>

	<hr>

	<div>
		{% include "webmentions.njk" %}
	</div>

</article>
