	<meta property="og:image:height" content="640">
	<meta property="twitter:title" content="{{title}} | Laker Turner">
	<meta property="twitter:card" content="summary">
	<meta property="twitter:image" content="{{author.photo}}">

	<!-- feed autodiscovery -->
