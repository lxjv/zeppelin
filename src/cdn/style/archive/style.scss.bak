@import 'base';

html {
	background-color: $background;
	color: $text;
}

body {
	padding: 0 1em;
	border-radius: 1em;
	margin: 2em auto;
	max-width: 90%;

	font-family: $font-text;
	font-size: 105%;
}

small { /* heh */
	font-size: 69%;
	font-weight: 420;
}

#content {
	margin-top: 0.5em;
	padding-left: 1em;
	border-radius: 1em;
	border: 2px solid;
	max-width: 75%;
	padding-right: 1em;
}

#content-wrap {
	padding-bottom: 1em;
}

hr {
  border: none;
  border-top: 1px solid $text;
	margin: 1em 0;
  text-align: center;
  height: 5px;
}

blockquote {
	margin-left: 13px;
	padding-left: 8px;
	border-left: 4px solid $accent;
	border-spacing: 5px;
}

#webrings {
	margin-top: 1em;
	margin-left: 13px;
}

.post-tag {
	color: $text;
	margin-right: 5px;
}

.statuslol_container {
	margin: 1em 0 1em 0;
	border: 1px solid $text;
	padding: 1em;
	border-radius: 1em;
	max-width: fit-content;
}

.profile-picture {
	border: 2px solid #fff8e7;
	border-radius: 100%;
	margin: 1em 0.2em 0em 0.5em;
}

.webring {
	margin-right: 1em;
}

@media (prefers-color-scheme: dark) {
	html {
		background: $dark-background;
		color: $dark-text;
	}

	hr {
		border-top: 1px solid $dark-text;
	}

	.post-tag {
		color: $dark-text;
	}

	a[href] {
		color: #fff8e7;
		text-decoration: underline dotted #fff8e79c;

	}

	.literal-book-item__title {
		color: #fff8e7 !important;
	}

	.statuslol_container {
		border: 1px solid $dark-text;
	}

}
